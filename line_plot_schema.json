{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"font": "Helvetica"},
    "data": {"url": "drug_addicts_by_state_my.csv"},
    "width": "container",
    "height": 400,
    "layer": [
        {
        "mark": {
          "type": "line",
          "point": true
        },
        "encoding": {
          "x": {"field": "Year", "type": "ordinal"},
          "y": {"field": "Value", "type": "quantitative", "aggregate": "sum", "title": "Total Drug Addicts"},
          "color": {"value": "green"}, 
          "tooltip": [
            {"field": "Year", "type": "ordinal"},
            {"field": "sum_Value", "type": "quantitative", "title": "Total Drug Addicts", "format": ",d"}
                ]
            }
        },
        {
        "transform": [
            {
            "filter": "datum.Year == 2016"
                }
            ],
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -20,
            "dy": -30,
            "fontSize": 12,
            "fontWeight": "normal",
            "lineBreak": "\n"
            },
        "encoding": {
            "x": {"field": "Year"},
            "y": {"field": "Value", "type": "quantitative","aggregate": "sum"},
            "text": {
            "value": "Peak number\nof drug addicts\nin the last decade"
            },
            "color": {"value": "black"}
            }
        },
        {
        "transform": [
            {
            "filter": "datum.Year == 2012"
                }
            ],
        "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 25,
            "dy": -15,
            "fontSize": 11,
            "fontWeight": "normal",
            "lineBreak": "\n"
            },
        "encoding": {
            "x": {"field": "Year"},
            "y": {"field": "Value", "type": "quantitative","aggregate": "sum"},
            "text": {
            "value": "Lowest number\nof drug addicts\nin the last decade"
            },
            "color": {"value": "black"}
            }
        },
        {
        "transform": [
            {
            "filter": "datum.Year == 2016"
                }
            ],
            "mark": {
                "type": "rule",
                "color": "blue",
                "opacity": 0.5,
                "strokeDash": [5, 5]
            },
            "encoding": {
                "x": {"field": "Year", "type": "nominal"}
            }
        },
        {
            "transform": [
                {
                "filter": "datum.Year == 2016"
                    }
                ],
                "mark": {
                    "type": "text",
                    "align": "right",
                    "baseline": "middle",
                    "dx": 100,
                    "dy": 200,
                    "fontSize": 12,
                    "fontWeight": "normal",
                    "lineBreak": "\n"
                },
                "encoding": {
                    "x": {"field": "Year"},
                    "y": {"field": "Value", "type": "quantitative","aggregate": "sum"},
                    "text": {
                    "value": "Start of decline"
                    },
                    "color": {"value": "blue"}
                }
            }
    ]
}

  