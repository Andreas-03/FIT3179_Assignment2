{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Drug Addiction Prevalence by State",
        "offset": 20,
        "fontSize": 18,
        "dx": 120
    },
    "config": {"font": "Helvetica","legend": {"titleFontSize": 14, "labelFontSize": 12}, "axis": {"labelFontSize": 12, "titleFontSize": 14}
    },
    "width": "container",
    "height": 500,
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "selectedYear",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2021,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "layer": [
        {    "data": {
            "url": "./my_states.json",
            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
        },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 0.5
            }
        },
        {    "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {
                    "calculate": "datum.Value / datum.Population1000", "as": "Drug Addicts per 1,000"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Drug Addicts per 1,000",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [0.1, 0.3, 0.6, 1.0, 1.5],
                        "range": ["#edf2c2", "#d3ed95", "#addd8e", "#78c679", "#31a354", "#008000"]
                    }

                },
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Value", "type": "quantitative", "title": "Total Drug Addicts", "format": ",d"},
                    {"field": "Drug Addicts per 1,000", "type": "quantitative", "format": ".2f", "title": "Drug Addicts per 1,000"},
                    {"field": "Population1000", "type": "quantitative", "title": "Population", "format": ",d"},
                    {"field": "Year", "type": "ordinal", "title": "Year"}
                ]
            }
        },
        {   "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {
                    "calculate": "datum.Value / datum.Population1000", "as": "Drug Addicts per 1,000"
                }
            ],
            "mark": {
                "type": "text",
                "color": "black",
                "fontStyle":"italic",
                "fontSize": 11,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {"field": "State", "type": "nominal"},  
                "longitude": {"field": "geo.properties.longitude", "type": "quantitative"},  
                "latitude": {"field": "geo.properties.latitude", "type": "quantitative"},   
                "opacity": {"condition": {"test": "datum.State == 'Labuan' || datum.State == 'Kuala Lumpur' || datum.State == 'Putrajaya'", "value": 0}, "value": 0.30},
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Value", "type": "quantitative", "title": "Total Drug Addicts", "format": ",d"},
                    {"field": "Drug Addicts per 1,000", "type": "quantitative", "format": ".2f", "title": "Drug Addicts per 1,000"},
                    {"field": "Population1000", "type": "quantitative", "title": "Population", "format": ",d"},
                    {"field": "Year", "type": "ordinal", "title": "Year"}
                ]
            }
        }
    ]
}
