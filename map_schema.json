{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"font": "Helvetica",
                "legend": {"titleFontSize": 14, "labelFontSize": 12, "direction": "horizontal", "orient": "bottom"},
                "axis": {"labelFontSize": 12, "titleFontSize": 14}
    },
    "width": "container",
    "height": 500,
    "projection": {"type": "equirectangular"},
    "params": [
        {
            "name": "selectedYear",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2021,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "layer": [
        {
            "data":{"url": "./my_states.json", "format": {"type": "topojson", "feature": "ne_10m_ocean"}},
            "mark": {"type": "geoshape", "fill": "#cae9f5", "stroke": "black", "strokeWidth": 0.5}
        },
        {    "data": {
            "url": "./my_states.json",
            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
        },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "black",
                "strokeWidth": 0.5
            }
        },
        {    "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {"calculate": "datum.Population1000 * 1000", "as": "Population"},
                {"calculate": "datum.Value / (datum.Population/100000)", "as": "Drug Addicts per 100,000"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Drug Addicts per 100,000",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [10, 20, 40, 70, 110, 150, 200, 250],
                        "range": ["#FFFFE0", "#E2F5BD", "#C5EA99","#8FD16C", "#62B55E", "#3B9752", "#28794C", "#155B45", "#073F3E"]
                    }

                },
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Value", "type": "quantitative", "title": "Total Drug Addicts", "format": ",d"},
                    {"field": "Drug Addicts per 100,000", "type": "quantitative", "format": ".2f", "title": "Drug Addicts per 100,000"},
                    {"field": "Population", "type": "quantitative", "title": "Population", "format": ",d"},
                    {"field": "Year", "type": "ordinal", "title": "Year"}
                ]
            }
        },
        {   "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {"calculate": "datum.Population1000 * 1000", "as": "Population"},
                {"calculate": "datum.Value / (datum.Population/100000)", "as": "Drug Addicts per 100,000"}
            ],
            "mark": {
                "type": "text",
                "color": "black",
                "fontStyle":"italic",
                "fontSize": 12,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {"field": "State", "type": "nominal"},  
                "longitude": {"field": "geo.properties.longitude", "type": "quantitative"},  
                "latitude": {"field": "geo.properties.latitude", "type": "quantitative"},   
                "opacity": {"condition": {"test": "datum.State == 'Labuan' || datum.State == 'Kuala Lumpur' || datum.State == 'Putrajaya'", "value": 0}, "value": 0.40},
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Value", "type": "quantitative", "title": "Total Drug Addicts", "format": ",d"},
                    {"field": "Drug Addicts per 100,000", "type": "quantitative", "format": ".2f", "title": "Drug Addicts per 100,000"},
                    {"field": "Population", "type": "quantitative", "title": "Population", "format": ",d"},
                    {"field": "Year", "type": "ordinal", "title": "Year"}
                ]
            }
        }
    ]
}
