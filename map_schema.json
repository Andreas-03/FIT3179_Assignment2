{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Drug Addicts Prevalence by Administrative District and State",
        "offset": 20
    },
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "selectedYear",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 2010,
                "max": 2021,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "layer": [
        {    "data": {
            "url": "./my_states.json",
            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
        },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 0.5
            }
        },
        {    "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {
                    "calculate": "datum.Value / datum.Population1000", "as": "Drug Addicts per 1000 people"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color": {
                    "field": "Drug Addicts per 1000 people",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [0.1, 0.3, 0.6, 1.0, 1.5],
                        "range": ["#edf2c2", "#d3ed95", "#addd8e", "#78c679", "#31a354", "#006837"]
                    }

                },
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Drug Addicts per 1000 people", "type": "quantitative", "format": ".2f"}
                ]
            }
        },
        {   "data": {
            "url": "./drug_addicts_by_state_my.csv"
        },
            "transform": [
                {
                    "lookup": "State",
                    "from": {
                        "data": {
                            "url": "./my_states.json",
                            "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                        }
                        ,"key": "properties.name"

                    },
                    "as": "geo"

                },
                {
                    "filter": "datum.Year == selectedYear" 
                },
                {
                    "calculate": "datum.Value / datum.Population1000", "as": "Drug Addicts per 1000 people"
                }
            ],
            "mark": {
                "type": "text",
                "color": "black",
                "fontStyle":"italic",
                "fontSize": 10,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {"field": "State", "type": "nominal"},  
                "longitude": {"field": "geo.properties.longitude", "type": "quantitative"},  
                "latitude": {"field": "geo.properties.latitude", "type": "quantitative"},   
                "opacity": {"value": 0.25},
                "tooltip": [
                    {"field": "State", "type": "nominal"},
                    {"field": "Drug Addicts per 1000 people", "type": "quantitative", "format": ".2f"}
                ]
            }
        }
    ]
}
